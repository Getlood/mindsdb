# ============================================================================
# GETLOOD Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================================================
# Application
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET=your-secret-key-change-me-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Database - PostgreSQL
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindsdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/getlood

# ============================================================================
# MindsDB Configuration
# ============================================================================
MINDSDB_HTTP_URL=http://mindsdb:47334
MINDSDB_SQL_URL=postgresql://mindsdb:mindsdb@mindsdb:47334/mindsdb
MINDSDB_A2A_URL=http://mindsdb:47334/a2a
MINDSDB_API_KEY=

# ============================================================================
# Redis - Caching & Pub/Sub
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================================================
# ChromaDB - Vector Database
# ============================================================================
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_URL=http://${CHROMA_HOST}:${CHROMA_PORT}

# ============================================================================
# AI Model Providers
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google
GOOGLE_API_KEY=

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prometheus
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@getlood.com

# ============================================================================
# S3 / Object Storage (Optional)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=getlood-storage

# ============================================================================
# Pinecone (Optional - for vector storage)
# ============================================================================
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ANALYTICS=true

# ============================================================================
# Performance
# ============================================================================
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT=60

# ============================================================================
# Grafana
# ============================================================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
